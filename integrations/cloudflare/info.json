{
  "name": "Cloudflare",
  "description": "Deploy to Cloudflare Workers with Vite",
  "type": "deployment",
  "phase": "integration",
  "category": "deploy",
  "modes": ["file-router", "code-router"],
  "priority": 10,
  "link": "https://workers.cloudflare.com/",
  "smallLogo": "logos/cloudflare.svg",
  "partnerId": "cloudflare",

  "dependsOn": [],
  "conflicts": ["netlify", "vercel", "nitro"],

  "hooks": [
    {
      "type": "vite-plugin",
      "import": "import { cloudflare } from '@cloudflare/vite-plugin'",
      "code": "cloudflare({ viteEnvironment: { name: 'ssr' } })"
    }
  ],

  "packageAdditions": {
    "scripts": {
      "preview": "npm run build && vite preview",
      "deploy": "npm run build && wrangler deploy",
      "cf-typegen": "wrangler types"
    }
  }
}
